<?xml version="1.0" encoding="utf-8"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="arm" params="parent">

        <!-- bar 1 -->
        <joint name="arm_joint1" type="revolute">
            <parent link="${parent}"/>
            <child link="arm_link1"/>
            <origin xyz="-0.15 0 0.1" rpy="0 0 0" />
            <axis xyz="0 1 0" />
            <limit effort="5.0" lower="${-M_PI/2.0}" upper="0" velocity="0.1"/>
        </joint>

        <link name="arm_link1">
            <visual>
                <origin xyz="0 0 0.04" rpy="0 0 0" />
                <geometry>
                    <box size="0.02 0.02 0.1" />
                </geometry>
            </visual>
            <inertial>
                <origin xyz="0 0 0.04" rpy="0 0 0" />
                <mass value="1e-3" />
                <inertia ixx="1e-6" ixy="0.0" ixz="0.0"
                         iyy="1e-3" iyz="0.0"
                         izz="1e-6"/>
            </inertial>
        </link>

        <gazebo reference="arm_link1">
            <material>Gazebo/Orange</material>
        </gazebo>

        <transmission name="trans1">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="arm_joint1">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
            <actuator name="motor1">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>

        <!-- bar 2 -->
        <joint name="arm_joint2" type="revolute">
            <parent link="arm_link1"/>
            <child link="arm_link2"/>
            <origin xyz="0 0.0 0.1" rpy="0 0 0" />
            <axis xyz="0 1 0" />
            <limit effort="5.0" lower="${-M_PI/2.0}" upper="0" velocity="0.1"/>
        </joint>

        <link name="arm_link2">
            <visual>
                <origin xyz="0 0 0.05" rpy="0 0 0" />
                <geometry>
                    <box size="0.02 0.02 0.1" />
                </geometry>
            </visual>
            <inertial>
                <origin xyz="0 0 0.05" rpy="0 0 0" />
                <mass value="1e-3" />
                <inertia ixx="1e-6" ixy="0.0" ixz="0.0"
                         iyy="1e-3" iyz="0.0"
                         izz="1e-6"/>
            </inertial>
        </link>

        <gazebo reference="arm_link2">
            <material>Gazebo/Orange</material>
        </gazebo>

        <transmission name="trans2">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="arm_joint2">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
            <actuator name="motor2">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
        </transmission>

    </xacro:macro>

</robot>